{
   "$schema": "http://json-schema.org/draft-07/schema",
   "required": [
       "name",
       "version"
   ],
   "properties": {
       "version": {
	       "type": "integer",
	       "enum": [96, 10, 12, 13]
       },
       "name": {
	       "type": "string"
       },
       "database": {
	       "type": "object",
	       "required" : ["dbname"],
	       "properties": {
		       "dbname": {
			       "type": "string"
		       },
		       "username": {
			       "type": [ "string", "null" ]
		       },
		       "password": {
			       "type": [ "string", "null" ]
		       }
	       }
       },
       "memoryLimit": {
	       "type": "string"
       },
       "persistent": {
	       "type": "boolean"
       },
       "volumeSize": {
	       "type": "number"
       },
       "debezium": {
               "type": "boolean"
       },
       "expose": {
	       "type": "boolean"
       },
       "replicaCount": {
	       "type": "integer",
	       "minimum": 1
       }
   }
}
